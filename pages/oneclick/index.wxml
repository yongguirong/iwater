<!--pages/oneclick/index.wxml-->
<view class="container">
    <view class="mainbox" >
        <view style="flex-direction: row;">
            <van-icon name="clock-o" size="30"/>
            <picker mode="multiSelector" bindchange="bindMultiPickerChange"  value="{{multiIndex}}" range="{{multiArray}}">
                <view class="picker">
                选择配送时间：{{multiArray[0][multiIndex[0]]}}{{multiArray[1][multiIndex[1]]}}
                </view>
            </picker>
        </view>

        <van-cell title="地址" value="{{addrinfo.address}}" bindtap="showMap"/>
        <van-cell title="商品" is-link value="{{goods}}" link-type="navigateTo"
  url="/pages/goods/index"/>
        <van-cell-group>
            <van-field  value="{{ bzvalue }}" label="备注" placeholder="如有特殊需要在此填写" border="{{ false }} "bind:change="bzonChange" />
        </van-cell-group>
        <van-button round size="large" type="info">{{zfinfo}}</van-button>
        <van-button round size="large" type="danger" wx:if="{{hongbao>0}}" bindtap="useHongbao">使用红包</van-button>
    </view>
    <view class="notice-text">        放假通知:  01月21日-01月27日，放假期间不送水  </view>
    <view>政企订水点下方水票：0558-5587791</view>
</view>